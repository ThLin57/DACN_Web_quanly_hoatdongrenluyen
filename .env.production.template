# ===========================================
# TEMPLATE FILE - Sao chép thành .env.production và điền thông tin thực
# ===========================================

# Database
DATABASE_URL="postgresql://hoatdongrenluyen:YOUR_STRONG_PASSWORD@db:5432/hoatdongrenluyen_db?schema=public"

# PostgreSQL Credentials
POSTGRES_USER=hoatdongrenluyen
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD
POSTGRES_DB=hoatdongrenluyen_db

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://hoatdongrenluyen.io.vn
BACKEND_URL=https://hoatdongrenluyen.io.vn/api

# Security
JWT_SECRET=YOUR_VERY_LONG_RANDOM_SECRET_KEY_HERE
SESSION_SECRET=YOUR_ANOTHER_LONG_RANDOM_SECRET_KEY

# GitHub Webhook (cho tự động deploy)
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# Email (nếu cần gửi thông báo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Upload limits
MAX_FILE_SIZE=10485760

# CORS
ALLOWED_ORIGINS=https://hoatdongrenluyen.io.vn

# Prisma
PRISMA_CLI_BINARY_TARGETS=linux-musl

# ===========================================
# HƯỚNG DẪN TẠO MẬT KHẨU MẠNH:
# ===========================================
