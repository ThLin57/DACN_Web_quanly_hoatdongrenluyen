# 2. SESSION_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 3. POSTGRES_PASSWORD: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# 4. WEBHOOK_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
